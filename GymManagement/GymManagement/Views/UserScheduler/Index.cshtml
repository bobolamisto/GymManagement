@model IEnumerable<GymManagement.Models.ScheduleTable>

@{
    ViewBag.Title = "Index";
}

<h2>Orarul cursurilor</h2>

<table class="table">
    <tr>
        <th>

        </th>
        <th>
            Luni
        </th>
        <th>
            Marti
        </th>
        <th>
            Miercuri
        </th>
        <th>
            Joi
        </th>
        <th>
            Vineri
        </th>
        <th>
            Sambata
        </th>
        <th>
            Duminica
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            @foreach (var course in item.userScheduleModels)
            {
                <td>
                    @if (course != null)
                    {
                        <input type="submit" class="btn-primary" name="@course.userScheduleId" value="@course.courseName" title="Click to unjoin!" />
                    }
                </td>
            }
        </tr>
    }




</table>

<script>
    $(".btn-primary").click(function () {

        $.ajax({
            type: "POST",
            url: "@Html.Raw(Url.Action("Delete","UserScheduler"))" ,
            data: {
                userScheduleId: $(this).attr("name")
            }
        }).done(function () {
            window.location = "@Html.Raw(Url.Action("Index","UserScheduler"))";
            alert("You unjoined successfully!");
        })
    })
</script>