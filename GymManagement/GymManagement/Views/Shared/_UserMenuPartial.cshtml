@using Microsoft.AspNet.Identity

<div class="dropdown" style="padding-top:15px;padding-bottom:15px;">
    
    <a href="#" class="dropdown-toggle user-dropdown" data-toggle="dropdown">
        Hello, @User.Identity.GetUserName()!
        <span class="caret" style="border-top:4px solid #999999;"></span>
    </a>
    <ul class="dropdown-menu user-dropdown-menu">
        <li>@Html.ActionLink("Edit Profile", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
